<h1>Danh sách người dùng</h1>
<table class="table table-bordered">
    <thead>
        <th width="5%">STT</th>
        <th>Tên</th>
        <th>Email</th>
        <th width="15%">Phân quyền</th>
        <th width="5%">Sửa</th>
        <th width="5%">Xóa</th>
    </thead>
    <tbody>
        <% users.forEach(({id, name, email}, index) => { %>
        <tr>
            <td><%= index+1%></td>
            <td><%= name%></td>
            <td><%= email%></td>
            <td>
                <a href="/users/permission/<%= id %>" class="btn btn-success"
                    >Phân quyền</a
                >
            </td>
            <td>
                <a href="#" class="btn btn-warning">Sửa</a>
            </td>
            <td>
                <a href="#" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>
